{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "services": [
    {
      "name": "docs-site",
      "buildCommand": "npm run build",
      "startCommand": "npx docusaurus serve --dir build --host 0.0.0.0 --port $PORT",
      "env": {
        "NODE_ENV": "production",
        "PUBLIC_DOCS_URL": "https://docs.blackroad.dev"
      }
    }
  ]
}
